<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_gray"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/icon_feedback"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_feedback"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:textColor="@color/main_black"
                        android:textSize="26sp"
                        android:text=""
                        style="@style/CommonTitle"
                        android:id="@+id/tv_question"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_correct_green"
                            android:layout_width="35dp"
                            android:layout_height="35dp"></LinearLayout>
                        <TextView
                            android:textSize="18sp"
                            android:id="@+id/tv_correct_answer"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="this is a answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_wrong_answer"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_incorrect_red"
                            android:layout_width="35dp"
                            android:layout_height="35dp"></LinearLayout>
                        <TextView
                            android:textSize="18sp"
                            android:id="@+id/tv_wrong_answer"
                            android:textColor="@color/light_red"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="this is a answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="-1dp"
                android:id="@+id/ll_footer"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_icon_result"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/ic_correct_white"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/tv_result"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Correct"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>