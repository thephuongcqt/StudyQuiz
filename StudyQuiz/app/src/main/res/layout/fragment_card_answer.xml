<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phuongnt.studyquiz.fragment.CardAnswerFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_volume"
            android:onClick="onVolumeAnswerSelected"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_volume_up_black"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:onClick="onFragmentAnswerSelected">
            <TextView
                android:id="@+id/tv_card_answer"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="26sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
