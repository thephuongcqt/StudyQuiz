<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phuongnt.studyquiz.fragment.TFQuestionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:onClick="onTFQuestionVolumeClick"
            android:id="@+id/iv_volume"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_volume_up_black"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView

            android:textColor="@color/black"
            android:id="@+id/tv_question_title"
            style="@style/CommonTitle"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="" />
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/tv_True"
                android:background="@drawable/border_gray"
                style="@style/CommonTitle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="True"/>
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:id="@+id/tv_False"
                android:background="@drawable/border_gray"
                style="@style/CommonTitle"
                android:gravity="center"
                android:layout_weight="1"
                android:text="False"
                android:layout_width="wrap_content"
                android:layout_height="55dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
