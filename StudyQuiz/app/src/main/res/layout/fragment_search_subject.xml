    android:layout_height="match_parent"
    tools:context="com.phuongnt.studyquiz.fragment.SearchSubjectFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
